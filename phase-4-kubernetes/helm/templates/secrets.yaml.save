apiVersion: v1
kind: Secret
metadata:
  name: todo-app-secrets
  labels:
    {{- include "todo-app.labels" . | nindent 4 }}
type: Opaque
stringData:
  JWT_SECRET: {{ .Values.secrets.jwtSecret | quote }}
  OPENROUTER_API_KEY: {{ .Values.secrets.openrouterApiKey | quote }}
  DATABASE_URL: {{ .Values.secrets.databaseUrl | quote }}

